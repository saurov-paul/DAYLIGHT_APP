{% extends 'base.html.twig' %}

{% block title %}Enter a City
{% endblock %}

{% block body %}
	<style>
		body {
			background: linear-gradient(to right, #74ebd5, #ACB6E5);
			font-family: 'Arial', sans-serif;
			height: 100vh; /* Full height for centering */
			display: flex; /* Flexbox for centering */
			align-items: center; /* Center vertically */
			justify-content: center; /* Center horizontally */
			margin: 0; /* Remove default margin */
		}
		.card {
			border-radius: 15px;
			box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
			background: rgba(255, 255, 255, 0.9);
		}
		.card-title {
			font-size: 2.5rem;
			font-weight: bold;
			color: #333;
		}
		.form-control {
			border-radius: 10px;
			border: 2px solid #007bff;
		}
		.form-control:focus {
			border-color: #0056b3;
			box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
		}
		.btn-primary {
			background-color: #007bff;
			border: none;
			font-size: 1.1rem;
			padding: 10px;
			border-radius: 10px;
		}
		.btn-primary:hover {
			background-color: #0056b3;
		}
		.footer-text {
			font-size: 0.9rem;
			color: #777;
		}
	</style>

	<div class="card shadow-lg p-4" style="width: 100%; max-width: 500px;">
		<div class="text-center mb-4">
			<h1 class="card-title">üåû Daylight Data üåç</h1>
			<p class="text-muted">Enter two Finnish cities to compare their daylight data.</p>
		</div>

		{{ form_start(form) }}

		<div class="mb-4">
			{{ form_row(form.city, {
            'label': 'City Name:',
            'attr': {'class': 'form-control', 'placeholder': 'Type the name of a Finnish city'}
        }) }}
		</div>

		<div class="mb-4">
			{{ form_row(form.city2, {
            'label': 'Second City Name:',
            'attr': {'class': 'form-control', 'placeholder': 'Type the name of a Finnish city'}
        }) }}
		</div>

		<div class="d-grid">
			<button type="submit" class="btn btn-primary btn-block">Get Daylight Data</button>
		</div>

		<div class="text-center mt-3">
			<small class="footer-text">Powered by your amazing daylight API!</small>
		</div>
	</div>
{% endblock %}
